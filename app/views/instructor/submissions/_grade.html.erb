<div class="row">
  <div class="col-md-8">
    <%= form_for [:instructor, @assignment, @submission] do |f| %>
      <div class="form-group">
        <%= f.label :grade %>
        <%= f.number_field :grade, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :feedback %>
        <%= f.text_area :feedback, rows: 8, class: 'form-control', placeholder: "Enter Comments" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
