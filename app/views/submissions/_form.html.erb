<div class="row">
  <div class="col-md-8">
    <%= form_for [@assignment, @submission] do |f| %>
      <div class="form-group">
        <%= f.label :note %>
        <%= f.text_area :note, class: 'form-control', placeholder: "Enter note or comment" %>
      </div>
      <% if @submission.file? %>
        <%= link_to(render_file_name(@submission.file.url), @submission.file.url, target: "_blank") %>
        <div class="form-group">
          <%= f.label :remove_file %>
          <%= f.check_box :remove_file %>
        </div>
      <% else %>
        <div class="form-group">
          <%= f.label :file %>
          <%= f.file_field :file %>
          <%#= f.hidden_field :file_cache %>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
